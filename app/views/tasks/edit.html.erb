<h1>Editing Task</h1>

<%= form_for :task, url: project_task_path(@task.project, @task), method: :patch do |f| %>

  <% if @task.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(@task.errors.count, "error") %> prohibited
        this task from being saved:
      </h2>
      <ul>
        <% @task.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <p>
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </p>

  <p>
    <%= f.label :status %><br>
    <%= select_tag :status, options_for_select([ "new", "in_process", "done" ], @task.status) %>
  </p>

  <p>
    <%= f.submit %>
  </p>

<% end %>
